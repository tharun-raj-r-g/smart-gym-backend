generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  height String
  weight String
  bmi String
  age String
  gender String
  injury String
  medication String
  experience String
  specification String
  userId String @unique
}